<% project_relation_to_internal = EasyIssueCopyProjectRelation.where(project_id: project.id).first %>
<% if project_relation_to_internal %>
  <% related_project_to_internal = project_relation_to_internal.internal_project %>
  <% related_project_users_to_internal = related_project_to_internal.members.map{|member| member.user_id} %>
  <% if related_project_to_internal && related_project_users_to_internal.include?(User.current.id) %>
    <%= hidden_field_tag 'issue[easy_issue_copy][original_issue_id]', params["original_issue_id"] %>
  <% end %>
<% end %>
